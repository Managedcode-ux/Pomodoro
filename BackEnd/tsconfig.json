{
  "compilerOptions": {
    "isolatedModules":true,
    "skipLibCheck":true,
    "outDir": "dist",
    "rootDirs": ["src", "prisma"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "esModuleInterop":true,
    "lib": ["es2022"],
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
